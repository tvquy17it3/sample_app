<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.img.size_50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t("posts.time_post", time: (time_ago_in_words micropost.created_at)) %>.
    <% if current_user? micropost.user %>
      <%= link_to t("posts.delete"), micropost, method: :delete, data: {confirm: t("posts.you_sure")} %>
    <% end %>
  </span>
</li>
